{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "paths": {
      "@utils/*" : [
        "./libs/utils/*"
      ],
      "@model" : [
        "./libs/model"
      ]
    }
  },
  "include": [
    "**/src/**/*.ts"
  ],
  "exclude": [
    "**/test/**/*.ts"
  ]
}
